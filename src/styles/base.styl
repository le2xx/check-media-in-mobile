@import 'variables.styl'
@import 'fonts.styl'
@import 'mixins.styl'

@import '../app/components/**/*'

$landscape-color = rgba(121, 99, 125, .5)
$portrait-color = rgba(61, 98, 40, .5)

body
  display block

  .content
    border 3px solid $title-color
    border-radius 5px
    box-sizing border-box
    display flex
    flex-direction column
    height 800px
    padding 40px 20px 600px 20px
    width 100%

    .title
      font-size 24px
      margin 0
      text-align center

    .input
      border 1px solid $title-color
      border-radius 5px
      font-size 24px
      height 40px
      line-height 24px
      outline none
      padding 0 10px
      width 200px

    .orientation
      align-items center
      display flex
      padding 10px 0

      .landscape
        background $landscape-color
        border 2px solid $text-color
        border-radius 3px
        height: 40px
        width: 40px

      .portrait
        background $portrait-color
        border 2px solid $text-color
        border-radius 3px
        height: 40px
        width: 40px

      .label
        font-size 18px
        line-height 18px
        margin-left 20px

@media (orientation: landscape)
  .content
    background $landscape-color

@media (orientation: portrait)
  .content
    background $portrait-color
