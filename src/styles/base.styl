@import 'variables.styl'
@import 'fonts.styl'
@import 'mixins.styl'

// @import '../app/components/**/*'

$landscape-color = rgba(121, 99, 125, .5)
$portrait-color = rgba(61, 98, 40, .5)

body
  display block

  .content
    border 3px solid $title-color
    border-radius 5px
    box-sizing border-box
    display flex
    flex-direction column
    padding 40px 20px 20px 20px
    width 100%

    .title
      font-size 24px
      margin 5px
      text-align center


    .input-wrap
      align-items center
      display flex
      margin 10px 0

      .input
        border 1px solid $title-color
        border-radius 5px
        font-size 24px
        flex: 1 1 10px
        height 40px
        line-height 24px
        outline none
        margin 0 10px 0 0
        padding 0 10px
        width 100px

      .submit
        height: 35px

    .orientation
      align-items center
      display flex
      padding 10px 0

      .landscape
        background $landscape-color
        border 2px solid $text-color
        border-radius 3px
        height: 30px
        width: 30px

      .portrait
        background $portrait-color
        border 2px solid $text-color
        border-radius 3px
        height: 30px
        width: 30px

      .label
        font-size 18px
        line-height 18px
        margin-left 10px

    .screen-info
      .screen-key
        font-size 16px
        font-weight 700
        line-height 24px

      .screen-value
        font-size 18px
        line-height 18px

fieldset
  margin 10px 0

@media (orientation: landscape)
  .content
    background $landscape-color

@media (orientation: portrait)
  .content
    background $portrait-color
